<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
C:\Projects\WoW\Bin\Interface\FrameXML\UI.xsd">
<Script file="upneOptions.lua"/>

<CheckButton name="UpneCheckButtonTemplate" inherits="UICheckButtonTemplate" virtual="true">
	<Size>
		<AbsDimension x="22" y="22"/>
	</Size>
	<Layers>
		<Layer level="ARTWORK">
			<FontString name="$parentText" inherits="GameFontNormalSmall" text="">
				<Color r="1.0" g="1.0" b="1.0" a="1.0"/>
				<Anchors>
					<Anchor point="LEFT" relativePoint="RIGHT"/>
				</Anchors>
			</FontString>
		</Layer>
	</Layers>
	<Scripts>
		<OnClick>
			UpneCheckButton_OnClick(self, button, down)
		</OnClick>
		<OnLeave>
			UpneCheckButton_OnLeave(self)
		</OnLeave>
	</Scripts>
</CheckButton>

<EditBox name="UpneInputBoxTemplate" inherits="InputBoxTemplate" virtual="true">
	<Size>
		<AbsDimension x="100" y="24"/>
	</Size>
	<Layers>
		<Layer level="ARTWORK">
			<FontString name="$parentText" inherits="GameFontNormalSmall" text="">
				<Color r="1.0" g="1.0" b="1.0" a="1.0"/>
				<Anchors>
					<Anchor point="RIGHT" relativePoint="LEFT">
						<Offset>
							<AbsDimension x="-10" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
			</FontString>
		</Layer>
	</Layers>
</EditBox>

<Frame name="UpneSeparatorTemplate" virtual="true">
	<Layers>
		<Layer level="ARTWORK">
			<FontString name="$parentText" inherits="GameFontNormalSmall" text="">
			</FontString>
		</Layer>
	</Layers>
</Frame>

<Frame name="UpneOptions_Frame">
	<Layers>
		<Layer level="ARTWORK">
			<FontString name="UpneOptions_Title" inherits="GameFontNormalLarge" text="upne">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="10" y="-15"/>
						</Offset>
					</Anchor>
				</Anchors>
			</FontString>
			<FontString name="UpneOptions_Version" inherits="GameFontNormalSmall" text="current version">
				<Color r="1.0" g="1.0" b="1.0" a="1.0" />
				<Anchors>
					<Anchor point="BOTTOMLEFT" relativeTo="UpneOptions_Title" relativePoint="BOTTOMRIGHT">
						<Offset>
							<AbsDimension x="5" y="1"/>
						</Offset>
					</Anchor>
				</Anchors>
			</FontString>
			<FontString name="UpneOptions_Description" inherits="GameFontNormalSmall" text="description">
				<Color r="1.0" g="1.0" b="1.0" a="1.0" />
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="UpneOptions_Title" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="0" y="-10"/>
						</Offset>
					</Anchor>
				</Anchors>
			</FontString>

		</Layer>
	</Layers>
	<Scripts>
		<OnLoad>
			UpneOptions_OnLoad(self)
		</OnLoad>
		<OnShow>
			UpneOptions_OnShow(self)
		</OnShow>
	</Scripts>
</Frame>
</Ui>
